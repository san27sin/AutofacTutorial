<h1>Вы уверены, что хотите удалить клиента?</h1>
@model ClientViewModel


<div>
    <h4>Детализация по клиенту:</h4>
    <hr />

    <dl class="row">
        <dt class="col-sm-2">
            id
        </dt>
        <dd class="col-sm-10">
            @Model.Id
        </dd>
        <dt class="col-sm-2">
            Имя
        </dt>
        <dd class="col-sm-10">
            @Model.Name
        </dd>
        <dt class="col-sm-2">
            Фамилия
        </dt>
        <dd class="col-sm-10">
            @Model.Surname
        </dd>
        <dt class="col-sm-2">
            Возраст
        </dt>
        <dd class="col-sm-10">
            @Model.Age
        </dd>
        <dt class="col-sm-2">
            Эл.почта
        </dt>
        <dd class="col-sm-10">
            @Model.Email
        </dd>
        <dt class="col-sm-2">
            Телефон
        </dt>
        <dd class="col-sm-10">
            @Model.Phone
        </dd>
        <dt class="col-sm-2">
            Адрес
        </dt>
        <dd class="col-sm-10">
            @Model.Address
        </dd>
    </dl>

    <a asp-controller ="Client" asp-action="Delete" asp-route-id="@Model.Id" class="text-danger">
        <button type="button" class="btn btn-danger">Удалить</button><!--fa fa-trash абривиатура нашего стиля, эконка--->
    </a>

    <div>
        <a asp-action="Index">Back to List</a>
    </div>
</div>
