<h1>Вы уверены, что хотите удалить заказ клиента?</h1>
@model OrderViewModel

<h1>Details</h1>

<div>
    <h4>Детализация по заказу:</h4>
    <hr />

    <dl class="row">
        <dt class="col-sm-2">
            #
        </dt>
        <dd class="col-sm-10">
            @Model.Id
        </dd>
        <dt class="col-sm-2">
            Название
        </dt>
        <dd class="col-sm-10">
            @Model.Name
        </dd>
        <dt class="col-sm-2">
            Цена
        </dt>
        <dd class="col-sm-10">
            @Model.Price
        </dd>
        <dt class="col-sm-2">
            Описание
        </dt>
        <dd class="col-sm-10">
            @Model.Description
        </dd>
    </dl>

    <a asp-controller ="Order" asp-action="Delete" asp-route-id="@Model.Id" class="text-danger">
        <button type="button" class="btn btn-danger">Удалить</button><!--fa fa-trash абривиатура нашего стиля, эконка--->
    </a>

    <div>
        <a asp-action="Index" asp-route-id="@Model.ClientId">Back to List of orders</a>
    </div>
</div>
